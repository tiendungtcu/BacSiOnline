
    <table id="dgNotifyType" title="Danh mục thông số" style="width:800px;height:480px"
           toolbar="#toolbarNotifyType" pagination="true" idField="Id"
           rownumbers="true" fitColumns="true" singleSelect="true" nowrap="false" autoRowHeight="true">
        <thead>
            <tr>
                <th field="Id" width="50">Mã số</th>
                <th field="Name" width="50" editor="{type:'validatebox',options:{required:true}}">Loại thông báo</th>
                <th field="Status" width="30" editor="{type:'switchbutton',options:{checked:true,onText:'Có',offText:'Không',width:20}}" formatter="Showchecked">Kích hoạt</th>
            </tr>
        </thead>
    </table>
    <div id="toolbarNotifyType">
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:$('#dgNotifyType').edatagrid('addRow')">Thêm</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="javascript: $('#dgNotifyType').edatagrid('destroyRow')">Xóa</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-save" plain="true" onclick="javascript: $('#dgNotifyType').edatagrid('saveRow')">Lưu</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-undo" plain="true" onclick="javascript: $('#dgNotifyType').edatagrid('cancelRow')">Hủy</a>
    </div>

    <script type="text/javascript">
        $(function () {
            $('#dgNotifyType').edatagrid({               
                url: '@Url.Action("ListAllPaging", "NotifyType", new { Area = "Quantri" })',
                saveUrl: '@Url.Action("Create", "NotifyType", new { Area = "Quantri" })',
                updateUrl: '@Url.Action("Update", "NotifyType", new { Area = "Quantri" })',
                destroyUrl: '@Url.Action("Destroy", "NotifyType", new { Area = "Quantri" })'        
            });
        });

        $.extend($.fn.datagrid.defaults.editors, {
            switchbutton: {
                init: function (container, options) {
                    var input = $('<input type="text" class="datagrid-editable-input">').appendTo(container);
                    return input.switchbutton(options);
                },
                getValue: function (target) {
                    return $(target).switchbutton('options').checked;
                },
                setValue: function (target, value) {
                    if (value) {
                        $(target).switchbutton('check');
                    } else {
                        $(target).switchbutton('uncheck');
                    }
                },
                resize: function (target, width) {
                    $(target).switchbutton('resize', { width: width });
                }
            }
        });


        function Showchecked(value) {          
                if (value == true) {
                    return '✓';
                }
                else {
                    return '✗';
                }
        }
    </script>
