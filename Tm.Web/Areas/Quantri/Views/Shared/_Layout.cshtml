<!DOCTYPE html>
<html lang=vi>
<head>
	<meta charset="UTF-8">
	<title>Phần mềm quản lý phòng mạch</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
	<link rel="stylesheet" type="text/css" href="~/Content/easyui/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="~/Content/easyui/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="~/Content/easyui/themes/color.css">

	
	<script type="text/javascript" src="~/Content/easyui/jquery.min.js"></script>
	<script type="text/javascript" src="~/Content/easyui/jquery.easyui.min.js"></script>
	<script type="text/javascript" src="~/Content/easyui/extensions/jquery.edatagrid.js"></script>
    <script type="text/javascript" src="~/Content/easyui/locale/easyui-lang-vi.js"></script>

    @Scripts.Render("~/bundles/mysite")

    @Styles.Render("~/Content/mysite")

</head>
<body class="easyui-layout" fit="true" style="height:100%;">
	<div region="north" split="true" style="height:52px;">
        <div class="easyui-layout" data-options="border:false,fit:true" >
            <div region="north" data-options="split:false,border:true" style="height:50px; background-color:#337ab7;">
                <div style="float:left;margin-left:10px"><a href="#"><img src="~/Content/images/book.png" height="32" /></a></div>
                <div style="float:left;font-size:21px!important; margin-left:10px;margin-top:5px;color:#fff">QUẢN TRỊ HỆ THỐNG</div>
                <div style="float:right;margin-right:10px;margin-top:6px;">
                    @Html.Partial("_PartialAdmin")
                </div>
            </div>
        </div>
	</div>
    <div region="west" split="true" style="width:240px">
        <div class="easyui-panel" title="Nội dung" headerCls="text-center" collapsible="true" style="border:none; width:100%;height:230px;padding:5px;">
            <ul class="easyui-tree">
                <!-- Các danh mục -->
                <li iconCls="icon-base">
                    <span>Quản lý danh mục</span>
                    <ul>
                        <!-- Danh mục triệu chứng-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Danh mục triệu chứng','@Url.Action("TabView","Symptom",new { Area = "Quantri" })')">Danh mục triệu chứng</a>
                        </li>
                        <!-- Danh mục thông số-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Danh mục thông số','@Url.Action("TabView","Param",new { Area = "Quantri" })')">Danh mục thông số</a>
                        </li>
                        <!-- Danh mục Role-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Nhóm người dùng','@Url.Action("TabView","Role",new { Area = "Quantri" })')">Danh mục nhóm</a>
                        </li>
                        <!-- Danh sách tài khoản-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Tài khoản','@Url.Action("TabView","UserManager",new { Area = "Quantri" })')">Danh mục tài khoản</a>
                        </li>
    
                    </ul>
                </li>
                <li iconCls="icon-base">
                    <span>Quản lý thông báo</span>
                    <ul>                       
                        <!-- Danh mục Loại thông báo-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Loại thông báo','@Url.Action("TabView","NotifyType",new { Area = "Quantri" })')">Các loại thông báo</a>
                        </li>
                        <!-- Danh sách tài khoản-->
                        <li iconCls="icon-datagrid">
                            <a href="#" onclick="open1('Các thông báo','@Url.Action("TabView","Notification",new { Area = "Quantri" })')">Danh sách thông báo</a>
                        </li>

                    </ul>
                </li>
                <li iconCls="icon-gears">
                    <a href="@Url.Action("ChangeSettings","AppSettings",new { Area="Quantri"})" >Cấu hình hệ thống</a>
                </li>
                <!-- Đăng xuất -->
                <li iconCls="icon-sign-out">
                    <a href="#" onclick="LogOff()">Đăng xuất</a>
                </li>
            </ul>
        </div>        
        <div class="easyui-panel" split="true" title="Lịch" headerCls="text-center" collapsible="true" style="border:none; width:100%;height:260px;padding:5px;text-align:center;">
            <div id="cc" class="easyui-calendar" style="width:220px;height:220px;">
            </div>
        </div>
        </div>
	<div  region="center" split="true">
            @RenderBody()

	</div>
    <div region="south" split="true" border="true" style="height:40px;padding-top:5px; background-color:gainsboro; text-align:center">
        @System.Configuration.ConfigurationManager.AppSettings["FooterLine"]
    </div>
    <script type="text/javascript">
        $("#cc").calendar({
            weeks: tuan,
            months: thang
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>