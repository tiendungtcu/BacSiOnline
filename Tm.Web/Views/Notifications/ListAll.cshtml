@using Tm.Data.ViewModels
@model IEnumerable<NotificationDetail>

@if (Model.Count()>0)
{
    <div class="noti-wrap">
        <div class="noti__item js-item-menu">
            <div>
                <i class="fas fa-bell"></i>
                <span class="quantity"> @Model.Count()</span>
                <div class="notifi-dropdown js-dropdown">
                    <div class="notifi__title">
                        <p>Bạn có @Model.Count() thông báo chưa xem</p>
                    </div>
                    @foreach (var notification in Model)
                    {
                        <div class="notifi__item">
                            <div class="bg-c1 img-cir img-40">
                                <i class="zmdi zmdi-email-open"></i>
                            </div>
                            <div class="content">
                                <a href="@Url.Action("Viewed","Notifications",new { Area="", id=notification.Id})">
                                    @notification.Title <br />
                                    <span class="date">@notification.CreatedDate </span>
                                </a>
                            </div>
                        </div>
                    }

                    <div class="notifi__footer">
                        <a href="#">Xem tất cả thông báo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="noti-wrap">
        <div class="noti__item js-item-menu">
            <div>
                <i class="fas fa-bell"></i>
                
                <div class="notifi-dropdown js-dropdown">
                    <div class="notifi__title">
                        <p>Bạn không có thông báo nào chưa xem</p>
                    </div>

                    <div class="notifi__footer">
                        <a href="#">Xem tất cả thông báo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
